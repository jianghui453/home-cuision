/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.page {
  width: 100%;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.btn-primary {
  background-color: #ff6b6b;
  color: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  border: none;
  margin: 20rpx 0;
}

.btn-secondary {
  background-color: #ffffff;
  color: #ff6b6b;
  border: 1px solid #ff6b6b;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
}

.card {
  background-color: #ffffff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
}

.subtitle {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #555555;
}

.text-center {
  text-align: center;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.space-between {
  justify-content: space-between;
}

.space-around {
  justify-content: space-around;
}

.text-primary {
  color: #ff6b6b;
}

.text-secondary {
  color: #888888;
}

.margin-top {
  margin-top: 20rpx;
}

.margin-bottom {
  margin-bottom: 20rpx;
}