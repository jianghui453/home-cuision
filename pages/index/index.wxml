<!-- pages/index/index.wxml -->
<view class="page">
  <view class="container">
    <view class="header">
      <view class="title">主厨私房菜</view>
    </view>
    
    <view wx:if="{{!hasUserInfo && canIUse}}" class="login-container">
      <button class="login-btn" open-type="getUserInfo" bindgetuserinfo="getUserInfo">登录使用</button>
    </view>
    
    <view wx:else class="menu-container">
      <view class="menu-item" bindtap="goToRecipes">
        <image class="menu-icon" src="/images/recipe-icon.png" mode="aspectFit"></image>
        <view class="menu-text">我的菜谱</view>
      </view>
      
      <view class="menu-item" bindtap="goToOrder">
        <image class="menu-icon" src="/images/order-icon.png" mode="aspectFit"></image>
        <view class="menu-text">开始点单</view>
      </view>
      
      <view class="menu-item" bindtap="goToDiningRecords">
        <image class="menu-icon" src="/images/order-icon.png" mode="aspectFit"></image>
        <view class="menu-text">干饭记录</view>
      </view>
      
      <view class="menu-item" bindtap="goToPartners">
        <image class="menu-icon" src="/images/partner-icon.png" mode="aspectFit"></image>
        <view class="menu-text">饭搭子管理</view>
      </view>
    </view>
  </view>
</view>