/* pages/index/index.wxss */
.page {
  background-color: #f8f8f8;
}

.container {
  padding: 40rpx 30rpx;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  margin-top: 60rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.menu-container {
  margin-top: 60rpx;
  width: 100%;
}

.menu-btn {
  width: 100%;
  height: 120rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 107, 0.2);
}

.btn-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.btn-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.user-info-container {
  margin-top: 80rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}