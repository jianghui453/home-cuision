/* pages/order/dining/dining.wxss */
.container {
  padding: 30rpx;
}

.header {
  margin-bottom: 40rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  padding: 60rpx 0;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #ff6b6b;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #888;
  font-size: 30rpx;
  margin-bottom: 40rpx;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.dining-info {
  margin-bottom: 30rpx;
}

.dining-status {
  margin-bottom: 20rpx;
}

.status-text {
  display: inline-block;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.status-text.active {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-text.ended {
  background-color: #f5f5f5;
  color: #999;
}

.dining-time {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.time-label {
  color: #999;
  margin-right: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx;
  padding-left: 20rpx;
}

.order-list {
  margin-bottom: 120rpx;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-info {
  flex: 1;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.order-meta {
  display: flex;
  font-size: 24rpx;
  color: #999;
}

.order-user {
  margin-right: 20rpx;
}

.user-actions {
  margin-left: 20rpx;
}

.block-btn {
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  background-color: #fff0f0;
  color: #ff6b6b;
}

.empty-orders {
  padding: 60rpx 0;
  text-align: center;
}

.action-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  z-index: 100;
}

.action-container button {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
}

.btn-primary {
  background-color: #ff6b6b;
  color: #fff;
}

.btn-share {
  background-color: #1890ff;
  color: #fff;
}

.btn-danger {
  background-color: #ff4d4f;
  color: #fff;
}

.share-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.share-dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.share-dialog-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.share-dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.share-dialog-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.share-btn {
  background-color: #1890ff;
  color: #fff;
  margin-bottom: 30rpx;
}

.share-dialog-close {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 20rpx 0;
}