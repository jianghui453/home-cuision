/* pages/order/order.wxss */
.page {
  min-height: 100vh;
  background-color: #f8f8f8;
}

.container {
  padding: 20rpx;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.loading {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #FF6B6B;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.btn-primary {
  background-color: #FF6B6B;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 30rpx;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.create-btn {
  margin-bottom: 30rpx;
  width: 100%;
}

.dining-list {
  margin-bottom: 30rpx;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.dining-item {
  padding: 30rpx;
  position: relative;
}

.dining-content {
  display: flex;
  align-items: center;
}

.dining-info {
  flex: 1;
}

.dining-status {
  margin-bottom: 20rpx;
}

.status-text {
  display: inline-block;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

.status-text.active {
  background-color: #4CAF50;
}

.status-text.ended {
  background-color: #9E9E9E;
}

.dining-time {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.time-label {
  color: #999;
}

.dining-dishes {
  font-size: 28rpx;
  color: #666;
}

.dishes-label {
  color: #999;
}

.dining-owner {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.owner-tag {
  display: inline-block;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #FF6B6B;
}

/* 分享弹窗 */
.share-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.share-dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.share-dialog-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.share-dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.share-dialog-desc {
  font-size: 30rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.share-dialog-btns {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.share-btn {
  flex: 1;
  margin-right: 20rpx;
  background-color: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.continue-btn {
  flex: 1;
  margin-left: 20rpx;
  background-color: #FF6B6B;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.share-dialog-close {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}

.dish-list {
  width: 100%;
  margin-bottom: 120rpx;
}

.dish-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.dish-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.dish-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.dish-info {
  flex: 1;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.dish-desc {
  font-size: 26rpx;
  color: #888;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.select-btn {
  width: 120rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  font-size: 26rpx;
  background-color: #f0f0f0;
  color: #666;
  margin-left: 20rpx;
}

.select-btn.selected {
  background-color: #ff6b6b;
  color: #fff;
}

.bottom-btn-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  z-index: 100;
}

.submit-btn {
  width: 100%;
}

.blocked-tip {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  width: 100%;
  padding: 20rpx 0;
  background-color: rgba(0, 0, 0, 0.7);
  text-align: center;
  z-index: 99;
}

.blocked-text {
  color: #fff;
  font-size: 28rpx;
}