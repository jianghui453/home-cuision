/* pages/order/order.wxss */
.container {
  padding: 30rpx;
}

.header {
  margin-bottom: 40rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  padding: 60rpx 0;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #ff6b6b;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #888;
  font-size: 30rpx;
  margin-bottom: 40rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}

.dish-list {
  width: 100%;
  margin-bottom: 120rpx;
}

.dish-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.dish-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.dish-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.dish-info {
  flex: 1;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.dish-desc {
  font-size: 26rpx;
  color: #888;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.select-btn {
  width: 120rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  font-size: 26rpx;
  background-color: #f0f0f0;
  color: #666;
  margin-left: 20rpx;
}

.select-btn.selected {
  background-color: #ff6b6b;
  color: #fff;
}

.bottom-btn-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  z-index: 100;
}

.submit-btn {
  width: 100%;
}

.blocked-tip {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  width: 100%;
  padding: 20rpx 0;
  background-color: rgba(0, 0, 0, 0.7);
  text-align: center;
  z-index: 99;
}

.blocked-text {
  color: #fff;
  font-size: 28rpx;
}